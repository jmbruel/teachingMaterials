{
    "cSpell.words": [
        "bitlysiteurl",
        "bonnes",
        "highlightjs",
        "imagesdir",
        "link"
    ],
    "cSpell.ignoreWords": [
        "acceptance",
        "bdd",
        "express",
        "formally",
        "highlightjs",
        "tdd",
        "tests",
        "us"
    ],
    "grammarly.overrides": [
        {
            "files": [
                "**/ddd.adoc"
            ],
            "config": {
                "audience": "general",
                "dialect": "american",
                "domain": "technical",
                "emotions": [
                    "neutral"
                ],
                "goals": [
                    "inform"
                ]
            }
        },
        {
            "files": [
                "**/urn.adoc"
            ],
            "config": {
                "audience": "expert",
                "dialect": "american",
                "domain": "technical",
                "emotions": [
                    "neutral"
                ],
                "goals": [
                    "inform"
                ]
            }
        }
    ],
    "spellright.language": [
        "fr",
        "en"
    ],
    "spellright.documentTypes": [
        "markdown",
        "latex",
        "plaintext",
        "asciidoc"
    ],
    "java.test.config": [
        {
            "name": "Test with AppMap",
            "vmArgs": [
                "-javaagent:${userHome}/.appmap/lib/java/appmap.jar",
                "-Dappmap.output.directory=${command:appmap.getAppmapDir}"
            ]
        }
    ]
}